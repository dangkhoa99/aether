{
  "name": "@minimaltech/infra",
  "version": "0.0.1",
  "description": "Minimal Technology Project Infrastructure",
  "scripts": {
    "clean": "pnpm --filter {packages/*} run clean",
    "build": "pnpm --filter {packages/*} run build",
    "rebuild": "pnpm run clean && pnpm run build",
    "rebuild:common": "pnpm --filter {packages/common} run rebuild",
    "rebuild:node-infra": "pnpm --filter {packages/node-infra} run rebuild",
    "rebuild:agent-infra": "pnpm --filter {packages/agent-infra} run rebuild",
    "postinstall": "pnpm run rebuild:common"
  },
  "author": "Phat Nguyen <tanphat199@gmail.com>",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "pnpm": ">=10"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalogs": {
      "build": {
        "@loopback/build": "^12.0.4"
      },
      "common": {
        "dayjs": "^1.11.18",
        "lodash": "^4.17.21"
      },
      "develop": {
        "@minimaltech/eslint-node": "^0.2.1",
        "@types/lodash": "^4.17.20",
        "@types/node": "^22.18.6",
        "eslint": "^9.36.0",
        "prettier": "^3.6.2",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
      }
    }
  }
}
