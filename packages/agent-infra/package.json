{
  "name": "@minimaltech/agent-infra",
  "version": "0.0.1-3",
  "description": "Minimal Technology - AI Agent Infrastructure - MastraAI Framework",
  "keywords": [
    "ai agent",
    "framework",
    "agent framework",
    "Mastra AI",
    "agent",
    "agent-application",
    "infrastructure",
    "minimaltech",
    "minimaltek",
    "mt",
    "infra",
    "nodejs",
    "nodejs framework"
  ],
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ai": {
      "default": "./dist/base/mastra/@ai/index.js",
      "types": "./dist/base/mastra/@ai/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "sh ./scripts/build.sh",
    "build:watch": "lb-tsc --watch",
    "clean": "sh ./scripts/clean.sh",
    "eslint": "eslint --report-unused-disable-directives .",
    "lint": "pnpm eslint && pnpm prettier:cli",
    "lint:fix": "pnpm eslint --fix && pnpm prettier:fix",
    "prettier:cli": "prettier \"**/*.{js,ts}\" -l",
    "prettier:fix": "pnpm prettier:cli --write",
    "rebuild": "sh ./scripts/rebuild.sh no-version",
    "rebuild:major": "sh ./scripts/rebuild.sh major",
    "rebuild:minor": "sh ./scripts/rebuild.sh minor",
    "rebuild:patch": "sh ./scripts/rebuild.sh patch",
    "rebuild:premajor": "sh ./scripts/rebuild.sh premajor",
    "rebuild:preminor": "sh ./scripts/rebuild.sh preminor",
    "rebuild:prepatch": "sh ./scripts/rebuild.sh prepatch",
    "rebuild:prerelease": "sh ./scripts/rebuild.sh prerelease",
    "pretest:dev": "pnpm run rebuild",
    "test:dev": "NODE_ENV=development mocha -r dotenv-flow/config -r source-map-support/register --timeout 60000 --exit dist/__tests__/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phatnt199/aether.git"
  },
  "author": "Minimal Technology <developer@miminaltek.com>",
  "bugs": {
    "url": "https://github.com/phatnt199/aether/issues"
  },
  "homepage": "https://github.com/phatnt199/aether/wiki",
  "license": "MIT",
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "!/**/tests",
    "!/**/dist/tests",
    "!/**/__tests__"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@mastra/core": "^0.18.0",
    "@minimaltech/node-infra": "^0.5.8-19",
    "ai": "^5.0.56",
    "dayjs": "catalog:common",
    "lodash": "catalog:common",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@loopback/build": "catalog:build",
    "@minimaltech/eslint-node": "catalog:develop",
    "@types/lodash": "catalog:develop",
    "@types/node": "catalog:develop",
    "eslint": "catalog:develop",
    "prettier": "catalog:develop",
    "source-map-support": "catalog:develop",
    "ts-node": "catalog:develop",
    "tsc-alias": "catalog:develop",
    "tsconfig-paths": "catalog:develop",
    "typescript": "catalog:develop"
  }
}
